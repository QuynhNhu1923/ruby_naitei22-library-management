<div class="container-fluid mt-4">
  <h3 class="fw-bold mb-4 text-center"><%= t(".title") %></h3>

  <% if @borrow_requests.any? %>
    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle mx-auto">
        <thead class="table-light">
          <tr>
            <th scope="col"><%= t(".id") %></th>
            <th scope="col"><%= t(".username") %></th>
            <th scope="col"><%= t(".request_date") %></th>
            <th scope="col"><%= t(".action") %></th>
            <th scope="col"><%= t(".status") %></th>
          </tr>
        </thead>
        <tbody>
          <% @borrow_requests.each do |borrow_request| %>
            <%= render "admin/borrow_requests/borrow_request", borrow_request: borrow_request %>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="d-flex justify-content-center mt-3">
      <%= raw pagy_bootstrap_nav(@pagy) if @pagy.present? %>
    </div>
  <% else %>
    <div class="alert alert-info text-center">
      <%= t(".no_requests") %>
    </div>
  <% end %>
</div>
